<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  
  
  
  <title>Blog</title>
</head>
<body>
  
  
  
  <div class="container">
    
    
    
    <h1 class="mb-4">Blog Articles</h1>
    <img src="https://img.icons8.com/windows/512/hand-with-pen.png" alt="hey" width="30">

    <a href="/articles/new" class="btn btn-primary">New Article</a>
    <img src="https://img.icons8.com/windows/512/hand-with-pen.png" alt="hey" width="30">
    <h1></h1>
    <h3 class="mb-4">All Articles</h3>


    <% articles.forEach(article => { %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title"><%= article.title %></h4>
          <div class="card-subtitle text-muted mb-2">
            <em><%= article.createdAt.toLocaleDateString() %></em>
          </div>

          <div class="card-text mb-2"><%= article.description %></div>
          <a href="articles/<%= article.slug %>" class="btn btn-success">View</a>
          <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTWkkiFC9UV_5AqPGSbA6wsumT7rUzU5npkmg&usqp=CAU" alt="hfkzjhf" width="30">
          <a href="articles/edit/<%= article.id %>" class="btn btn-info"><em>Edit</em></a>
          <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTWkkiFC9UV_5AqPGSbA6wsumT7rUzU5npkmg&usqp=CAU" alt="hfkzjhf" width="30">
          <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger "  >
              Delete</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
  
</body>
</html>